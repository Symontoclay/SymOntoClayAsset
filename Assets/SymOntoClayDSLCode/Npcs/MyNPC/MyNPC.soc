app MyNPC
{	
    on {: see(I, $x) & MyNPC($x) :} ($x >> @x)
	{
	    'MyNPC!!!!' >> @>log;
		@x >> @>log;
	}
	
	on {: hear(I, q1) :} => 
    {
        'q1!!!!' >> @>log;
		@@host.take(#@(gun));
		'End' >> @>log;
    }
	
	on {: hear(I, q2) :} => 
    {
        'q1!!!!' >> @>log;
		@@host.`ready for fire`();
		'End' >> @>log;
    }
	
	on {: hear(I, q3) :} => 
    {
        'q1!!!!' >> @>log;
		@@host.`start fire`();
		'End' >> @>log;
    }
}
